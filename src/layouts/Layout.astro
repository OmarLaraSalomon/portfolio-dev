---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SectionContainer from '../components/SectionContainer.astro';
import "@fontsource-variable/onest";

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props



---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative text-black dark:text-white">

		<div class="absolute top-0 z-[-2] h-full w-full min-h-screen
		bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)]
		bg-[size:20px_20px]">
	</div>






		<Header/>
		<slot />
		<SectionContainer id="contacto">

				<Footer/>
		</SectionContainer>
	
	</body>
	
</html>
<style is:global>
	:root {
	color-scheme: light dark; /*los colores que el navegador tiene que entender que vamos a manejar */	
/*el navegador y ale cambia los colores por defecto */
	}
	html {
		
		font-family: "Onest Variable",system-ui, sans-serif;
		scroll-behavior: smooth; /*este hace que se baje el scrol un poco lento, no de golpe */

	}

	body{
		background-color: #050505;
		display: flex;
		flex-direction: column;
        overscroll-behavior: none;
		min-height: 100vh; /*el 100 del viewpport porquer lo querremos siempre asi  */
		min-width: max-content;
	}

	
	
	
</style>
</body>
</html>
