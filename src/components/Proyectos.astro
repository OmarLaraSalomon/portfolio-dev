  VITE: {
    name: "Vite",
    class: "bg-purple-900 text-white",
    icon: Vite,
  },



  GIT: {
    name: "Git",
    class: "bg-black text-white",
    icon: Git,
  },

}


const PROJECTS = [
  {
    title: "Ecommerce - Cobra Kai",
    description:
    `Aplicación web con tematica de la serie de "Cobra kai". Qué incluye un login y registro de usuarios y dentro de la aplicación se presentan una sección de noticias, un carrito de compras con funcionalidad de SMTP para el envio de correo de la compra y un formulario para contactar.` ,
    link: "#",
    github: "#",
    image: "../public/imgs/AppDjango.png",
    tags: [TAGS.HTML,TAGS.CSS, TAGS.JS, TAGS.POSTGRESQL,TAGS.ANACONDA, TAGS.PYTHON, TAGS.DJANGO, TAGS.DOCKER],
  },
  {
    title: "Portfolio-dev",
    description:
      "Porftoflio para desarolladres y programadores. Enfocada en un diseño minimalista y futurista, aplicando tecnicas de esitlo como la grilla. Creada desde cero con Astro y Tailwind CSS.",
    link: "#",
    image: "../public/imgs/portfolio-dev.png",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },

  {
    title: "Cambio de Estados ",
    description:
      "Creación de cards estiladas con css que permiten seleccionar a un heroe, mostrando el cambio de estado para deseleccionarlo .",
    link: "#",
    image: "../public/imgs/react-usestate.png",
    tags: [TAGS.CSS, TAGS.REACT, TAGS.VITE],
  },



]
---

<div class="flex flex-col gap-y-16 ">
  
 {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
<div class="flex flex-col sm:flex-row sm:max-w-2xl max-w-[600px] mx-auto overflow-hidden  bg-[#01011bab] rounded-3xl  border-2 border-[#2a2a67a3]  p-3">   
  <div class="w-full md:w-1/2">
    <div class="relative  flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img class=" rounded-xl  object-cover w-auto sm:h-80 h-56  transition duration-500 hover:scale-105" loading="lazy" 
              src={image} 
              alt={`captura dle proyecto ${image}`}/>
    </div>

      
    </div>

    <div class="sm:p-4 p-2 sm:w-1/2 flex flex-col justify-between">
        <div>
          <h3 class="text-2xl font-semibold text-gray-800 dark:text-gray-100">
                {title}</h3>
            <p class="mt-4  m-2 text-pretty  text-sm text-gray-200 dark:text-gray-400">
              {description}
            </p>
        </div>

        <div class="flex flex-wrap ">
          <ul class="flex flex-row  flex-wrap mb-2 gap-x-2 pb-10">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs  ${tag.class} py-1 px-2 m-1 `}>
                  
                  <tag.icon className="w-4 h-4" title={tag.name} />
                  {tag.name}
              </span>
            </li>
          ))}
        </ul>

        </div>







    </div>
  </div>



  

    ))
  }

</div>


   

        
