import Git from "../components/icons/Git.astro"



const TAGS = {


  HTML: {
    name: "Html",
    class: "bg-black  text-white",
    icon: Html,
  },

  CSS: {
    name: "Css",
    class: "bg-[#003159] text-white",
    icon: Css,
  },

  JS: {
    name: "JavaScript",
    class: "bg-black  text-white",
    icon: Javascript,
  },

  ASTRO: {
    name: "Astro",
    class: "bg-black  text-white",
    icon: Astrito,
  },

  
  REACT: {
    name: "React",
    class: "bg-black  text-white",
    icon: React,
  },


  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },


  POSTGRESQL: {
    name: "Postgresql",
    class: "bg-[#003159] text-white",
    icon: Postgresql,
  },


  MONGO: {
    name: "Mongo",
    class: "bg-green-900 text-white",
    icon: Mongo,
  },


  ANACONDA: {
    name: "Anaconda",
    class: "bg-green-900 text-white",
    icon: Anaconda,
  },


  PYTHON: {
    name: "Python",
    class: "bg-[#b79200] text-black",
    icon: Python,
  },


  DJANGO: {
    name: "Django",
    class: "bg-green-900 text-white",
    icon: Django,
  },


  NODE: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: Node,
  },

  EXPRESS: {
    name: "Express",
    class: "bg-black text-white",
